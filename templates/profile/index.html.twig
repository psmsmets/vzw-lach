{% extends 'base.html.twig' %}

{% block title %}Associate index{% endblock %}

{% block main %}
    <h1>Associate index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for associate in associates %}
            <tr>
                <td>{{ associate.fullname }}</td>
                <td>{{ associate.role }}</td>
                <td>
                    <a href="{{ path('profile_show', {'id': associate.id}) }}">show</a>
                    <a href="{{ path('profile_edit', {'id': associate.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
