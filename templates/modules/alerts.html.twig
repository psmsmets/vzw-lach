{% for type in ['primary', 'secondary', 'danger','warning','success'] %}
  {% for alert in app.session.flashbag.get('alert-'~type) %}
    <div class="alert alert-{{type}} alert-dismissible mt-3 show" role="alert">
      {{ alert|raw }}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  {% endfor %}
{% endfor %}
