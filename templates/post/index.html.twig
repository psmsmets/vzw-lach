{% extends 'profile.html.twig' %}

{% block main %}

  <h1 class="text-primary mb-2 mb-md-4"><i class="bi bi-card-text"></i> Berichten</h1>

  {% if (pinned|length == 0) and (posts|length  == 0) %}

    <div class="p-3 mb-4 bg-white shadow-sm">
      <p class="my-2"><i class="bi bi-exclamation-circle-fill"></i> Geen berichten gevonden.</p>
    </div>

  {% else %}

    {% for post in pinned %}
      {% include 'post/template.html.twig' with {'item': post, 'pinned': true} %}
    {% endfor %}
 
    {% for post in posts %}
      {% include 'post/template.html.twig' with {'item': post, 'pinned': false} %}
    {% endfor %}

    {% if pages > 1 %}
      {% include 'modules/pagination.html.twig' %}
    {% endif %}

  {% endif %}

{% endblock %}
