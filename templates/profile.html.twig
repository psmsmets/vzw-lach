{% extends 'base.html.twig' %}

{% set viewpoint = manager.getViewpoint() %}
{% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}

{% block title %}Mijn profiel{% endblock %}

{% block header %}
  {% include 'modules/nav.html.twig' %}
{% endblock %}

{% block side %}
  {% if path('profile_events') not in currentPath %}
    {% include 'event/module.html.twig' %} 
  {% endif %}
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    body {padding-top: 56px;}
  </style>
  {{ encore_entry_link_tags('audio-player') }}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('audio-player') }}
{% endblock %}
