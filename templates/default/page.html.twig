{% extends 'base.html.twig' %}

{% block title %}{{ page.title }}{% endblock %}

{% block main %}
    <main>

      <nav aria-label="breadcrumb">
        <ol class="breadcrumb small fw-lighter">
          <li class="breadcrumb-item"><a href="{{ path('home') }}">{{org.url}}</a></li>
          <li class="breadcrumb-item active" aria-current="page">{{page.slug}}</li>
        </ol>
      </nav>

      <h1 class="text-primary d-flex justify-content-between">{{ page.title }}
      {% if not page.enabled %}
          <small><i class="fas fa-lock" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Niet gepubliceerd"></i></small>
      {% endif %}
      </h1>

      <ul class="list-inline small fw-lighter text-muted py-2">
        {% if page.showCreatedAt%}
          <li class="list-inline-item">Aangemaakt op {{ page.createdAt|format_datetime('full','none') }}.</li>
        {% endif %}
        {% if page.showUpdatedAt%}
          <li class="list-inline-item">Laatst aangepast op {{ page.updatedAt|format_datetime('full','none') }}.</li>
        {% endif %}
      </ul>

      {{page.body|raw}}

    </main>
{% endblock %}
