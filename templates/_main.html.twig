{% set strategy = 'html' %}
{% set _side = block('side') %}
{% set _title = block('title') %}
{# set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) #}
<!DOCTYPE html>
<html lang="{{default_locale}}">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="Pieter Smets (pieter@steps4it.be)">

        <meta name="mobile-web-app-capable" content="yes">

        <title>{% if _title %}{% block title %}{% endblock %} | {% endif %}VZW LA:CH</title>

        <!-- Core CSS -->
        {{ encore_entry_link_tags('bootstrap') }}
        {{ encore_entry_link_tags('safari_select_fix') }}
        {{ encore_entry_link_tags('vzw-lach') }}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
        <!-- Custom styles for this template -->
        {% block stylesheets %}{% endblock %}

    </head>

    <body class="bg">
 
        <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">

            {% block header %}{% endblock %}

            <div class="row">
            {% block body %}
                <div class="col col-12 {% if _side %}col-md-9 col-lg-8 col-xl-9{%endif%} col-print-12 mt-4">
                  <div id="notices" class="pl-2 pr-2 p-md-0">
                    {% include 'modules/alerts.html.twig' %}
                  </div>
                  {% block lead %}{% endblock %}
                  {% block main %}{% endblock %}
                </div>
              {% if _side is not empty %}
                <div class="col col-12 col-md-3 col-lg-4 col-xl-3 mt-4 d-print-none">
                   {% block side %}{% endblock %}
                </div>
              {% endif %}

            {% endblock %}

            </div><!-- /div row -->

            {% block footer %}{% endblock %}

        </div><!-- /div container -->

        <a id="toTop" href="javascript:;" style="visibility:hidden;"><span id="toTopHover"></span><img width="40" height="40" alt="To Top" src="/assets/img/to-top@2x.png"></a>

        <!-- JavaScript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        {% block javascripts %}{% endblock %}

    </body>

</html>
